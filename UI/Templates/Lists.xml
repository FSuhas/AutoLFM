<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/">
  <!--==========================================================================
    Base Row Template (Virtual)
    Common structure for all row types
    ==========================================================================-->
  <Frame name="AutoLFM_BaseRow_Template" virtual="true">
    <Size>
      <AbsDimension x="300" y="20"/>
    </Size>
    <Layers>
      <Layer level="OVERLAY">
        <FontString name="$parent_Label" inherits="GameFontNormal" justifyH="LEFT">
          <Size>
            <AbsDimension x="200" y="20"/>
          </Size>
          <Anchors>
            <Anchor point="LEFT">
              <Offset>
                <AbsDimension x="20" y="0"/>
              </Offset>
            </Anchor>
          </Anchors>
        </FontString>
        <FontString name="$parent_SecondaryLabel" inherits="GameFontNormal" justifyH="RIGHT">
          <Size>
            <AbsDimension x="72" y="20"/>
          </Size>
          <Anchors>
            <Anchor point="RIGHT">
              <Offset>
                <AbsDimension x="-8" y="0"/>
              </Offset>
            </Anchor>
          </Anchors>
        </FontString>
      </Layer>
    </Layers>
    <Frames>
      <CheckButton name="$parent_CheckButton" inherits="OptionsCheckButtonTemplate">
        <HitRectInsets>
          <AbsInset left="0" right="-280" top="0" bottom="0"/>
        </HitRectInsets>
        <Size>
          <AbsDimension x="20" y="20"/>
        </Size>
        <Anchors>
          <Anchor point="TOPLEFT"/>
        </Anchors>
      </CheckButton>
    </Frames>
  </Frame>
  <!--==========================================================================
    Dungeon Row Template
    ==========================================================================-->
  <Frame name="AutoLFM_DungeonRow_Template" inherits="AutoLFM_BaseRow_Template" virtual="true"/>
  <!--==========================================================================
    Raid Row Template
    ==========================================================================-->
  <Frame name="AutoLFM_RaidRow_Template" inherits="AutoLFM_BaseRow_Template" virtual="true"/>
  <!--==========================================================================
    Quest Row Template
    ==========================================================================-->
  <Frame name="AutoLFM_QuestRow_Template" inherits="AutoLFM_BaseRow_Template" virtual="true"/>
  <!--==========================================================================
    Generic Content Panel Template (Base)
    ==========================================================================-->
  <Frame name="AutoLFM_ContentPanel_Template" virtual="true">
    <Size>
      <AbsDimension x="298" y="252"/>
    </Size>
    <Anchors>
      <Anchor point="TOPLEFT"/>
    </Anchors>
    <Frames>
      <ScrollFrame name="$parent_ScrollFrame" inherits="UIPanelScrollFrameTemplate">
        <Size>
          <AbsDimension x="295" y="252"/>
        </Size>
        <Anchors>
          <Anchor point="TOPLEFT">
            <Offset>
              <AbsDimension x="3" y="0"/>
            </Offset>
          </Anchor>
        </Anchors>
        <ScrollChild>
          <Frame name="$parent_ScrollChild">
            <Size>
              <AbsDimension x="298" y="1"/>
            </Size>
            <Anchors>
              <Anchor point="TOPLEFT"/>
            </Anchors>
          </Frame>
        </ScrollChild>
      </ScrollFrame>
    </Frames>
  </Frame>
  <!--==========================================================================
    Dungeons Content Panel
    ==========================================================================-->
  <Frame name="AutoLFM_Content_Dungeons" parent="AutoLFM_MainFrame_ContentContainer" inherits="AutoLFM_ContentPanel_Template" hidden="true">
    <Scripts>
      <OnLoad>
        AutoLFM.UI.Content.Dungeons.OnLoad(this)
      </OnLoad>
      <OnShow>
        AutoLFM.UI.Content.Dungeons.OnShow(this)
      </OnShow>
    </Scripts>
  </Frame>
  <!--==========================================================================
    Raids Content Panel
    ==========================================================================-->
  <Frame name="AutoLFM_Content_Raids" parent="AutoLFM_MainFrame_ContentContainer" inherits="AutoLFM_ContentPanel_Template" hidden="true">
    <Scripts>
      <OnLoad>
        AutoLFM.UI.Content.Raids.OnLoad(this)
      </OnLoad>
      <OnShow>
        AutoLFM.UI.Content.Raids.OnShow(this)
      </OnShow>
    </Scripts>
  </Frame>
  <!--==========================================================================
    Quests Content Panel
    ==========================================================================-->
  <Frame name="AutoLFM_Content_Quests" parent="AutoLFM_MainFrame_ContentContainer" inherits="AutoLFM_ContentPanel_Template" hidden="true">
    <Scripts>
      <OnLoad>
        AutoLFM.UI.Content.Quests.OnLoad(this)
      </OnLoad>
      <OnShow>
        AutoLFM.UI.Content.Quests.OnShow(this)
      </OnShow>
    </Scripts>
  </Frame>
</Ui>
